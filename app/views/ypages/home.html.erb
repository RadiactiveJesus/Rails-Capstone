<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-3">Olympus Gaming Hub</h1>
    <p class="lead">Get the latest releases on gaming. Vote for your favorite games and explore new ones on our category search engine</p>
    <p class="lead">Welcome</p>
    <hr>
    <h1 class="display-4">Articles</h1>
    <div class="card">
      <ul id="articles" class="card-body">
        <% @articles.each do |article| %>
          <li class="text-body d-flex p-2 bd-highlight">
            <%= article.title%>
          </li>
          <li class="text-muted d-flex p-2 bd-highlight">
            <%= article.text %>
          </li>
          <hr id="art-between">
        <% end %>
      </ul>
    </div>
    <form class="lead mt-5">
          <%= link_to "Register NOW!",   new_user_registration_path, class: "btn btn-primary btn-lg" %>
    </form>
    <div id="categories" class="mt-3">
      <% @categories.each do |category| %>
        <%= link_to category.name, articles_path(:main => category.id) %>
      <% end %>
    </div>
  </div>
</div>