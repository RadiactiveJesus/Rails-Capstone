<div id="show" class="container jumbotron">
    <h1><%= @article.title %></h1>
    <p><%= @article.text %></p>
    <h1 class="category badge bg-light">Category: <%= @article.category.name %></h1>
    <small class="d-flex flex-start flex-column">
    <p><%= @article.votes.count %> <%= (@article.votes.count) == 1 ? 'Vote' : 'Votes'%></p>
        <% if @article.image.attached? %>
            <%= image_tag @article.image.variant(resize: "400x400"), class: "imgfeature" %>
        <% end %>
        <% pre_like = @article.votes.find { |vote| vote.user_id == current_user.id} %>
        <% if pre_like %>
            <%= button_to 'Unvote', article_vote_path(@article, pre_like), method: :delete %>
        <% else %>
            <%= button_to 'Vote', article_votes_path(@article), method: :post %>
        <% end %>
    </small>
</div>