<div class="container mt-5">
  <h2 class="text-center h1 mb-3">Create Article</h2>
  <div class="row">
    <div class="col-md-4 offset-4">
      <div class="card">
        <div class="card-header text-center h2 text-muted">
        </div>
        <div class="card-body">
          <%= form_for @article, url: articles_path,  html: { multipart: true } do |f| %>
            <ul>
              <% @article.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
            <div class="field form-group">
              <p>
                <%= f.label :title %><br />
                <%= f.text_field :title, autofocus: true, class: "form-control" %>
              </p>
            </div>
            <div class="field form-group">
              <p>
                <%= f.label :text %><br />
                <%= f.text_area :text, autofocus: true, class: "form-control" %>
              </p>
            </div>
            <div class="field form-group">
              <p>
                <%= f.label :category %><br />
                <%= f.select :category_id, Category.all.collect{|c|[c.name, c.id]}, autofocus: true, class: "form-control", prompt: "Choose your Category" %><br />
                <%= link_to "Cant find and appropriate Category?", new_category_path %><br />
              </p>
            </div>
            <div class="field form-group">
               <%= f.file_field :image , autofocus: true, class: "form-control" %>
            </div>
            <p>
              <%= f.submit "Create Article", class: 'form-control btn btn-info btn-block'%>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
