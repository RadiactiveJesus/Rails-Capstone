<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<div class="mother-feature">
    <div class="col-md-3 text-center">
    <%# <%= image_tag @user.article.avatar.url(:thumb), class: 'avatar-img' %>
  </div>

    <h1>All Articles</h1>
    <ul id="articles">
    <% @articles.each do |article| %>
      <li>
        <%= article.title %>
      </li>
      <li>
        <%= article.text %>
      </li>
    <% end %>
    </ul>
    <% @categories.each do |category| %>
        <%= link_to category.name, articles_path(:main => category.id) %>
    <% end %>
</div>
